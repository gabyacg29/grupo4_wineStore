<%- include("partials/head")%>
<%- include("partials/header")%>
<!------------------------------------------------------------>


<div class="container-fluid" id="colorF">
    <div class="row" id="filasP">
        <div class="col-12">
            <h2 class="products-title">Resultados de la búsqueda: <%= search %></h2>
        </div>
        
        <% if(results.length != 0) { %>
            <% results.forEach(product => { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/products/detail/<%= product.id %>">
                        <section class="product-box">
                            
                            <figure class="product-box_image">
                                <img src="/images/productos/<%=product.imagen%>" alt="imagen de producto">
                            </figure>
                            <article class="product-box_data">
                                <h2>$<%= product.precio %></h2>
                                <span></span>
                                <p><%= product.nombre %></p>
                                <i class=" fa fa-cart-plus fa-2x"></i>
                            </article>
                            
                            
                        </section>
                    </a>
                </div>
                <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
                    </div>
                    <% } %>
                </div>
            </div>
            
            
            <!------------------------------------------------------------>
            <%- include("partials/footer")%>
            
            